@model IEnumerable<AddressBook.Models.Contact>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phonebook)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @foreach (var number in item.Phonebook)
            {
                @Html.DisplayFor(modelItem => number)
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ContactId }) |
            @Html.ActionLink("Phonebook", "ViewPhones", new { id = item.ContactId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ContactId })
        </td>
    </tr>
}

</table>
