@model IEnumerable<AddressBook.Models.Telephone>

@{
                /**/

                ViewBag.Title = "Index";
}

<h2>Phonebook</h2>


@if (Model.Count() == 0)
{
    <p>
        Your phonebook is empty!
    </p>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { telephoneId = item.TelephoneId })
                </td>
            </tr>
        }

    </table>
}
<p>
    @Html.ActionLink("Add Number", "Create")
</p>


<div>
    @Html.ActionLink("Back to Index", "Index", "Home")
</div>


